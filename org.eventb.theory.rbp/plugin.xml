<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eventb.core.seqprover.reasoners">
      <reasoner
            class="org.eventb.theory.rbp.reasoners.ManualRewriteReasoner"
            id="manualRewriteReasoner"
            name="%manualRewriteReasoner">
      </reasoner>
      <reasoner
            class="org.eventb.theory.rbp.reasoners.AutoRewriteReasoner"
            id="autoRewriteReasoner"
            name="%autoRewriteReasoner">
      </reasoner>
      <reasoner
            class="org.eventb.theory.rbp.reasoners.AutoInferenceReasoner"
            id="autoInferenceReasoner"
            name="%autoInferenceReasoner">
      </reasoner>
      <reasoner
            class="org.eventb.theory.rbp.reasoners.ManualInferenceReasoner"
            id="manualInferenceReasoner"
            name="%manualInferenceReasoner">
      </reasoner>
      <reasoner
            class="org.eventb.theory.rbp.reasoners.ReduceToClassicLanguageReasoner"
            id="reduceToClassicLanguageReasoner"
            name="%reduceToClassicLanguageReasoner">
      </reasoner>
      <reasoner
            class="org.eventb.theory.rbp.reasoners.InstantiateTheoremReasoner"
            id="instantiateTheoremReasoner"
            name="%instantiateTheoremReasoner">
      </reasoner>
   </extension>
   <extension
         point="org.eventb.core.seqprover.autoTactics">
      <autoTactic
            class="org.eventb.theory.rbp.tactics.RewritesAutoTactic"
            description="%rbp0.desc"
            id="rbp0"
            name="%rbp0">
      </autoTactic>
      <autoTactic
            class="org.eventb.theory.rbp.tactics.InferenceAutoTactic"
            description="%rbp1.desc"
            id="rbp1"
            name="%rbp1">
      </autoTactic>
   </extension>
   <extension
         point="org.eventb.core.pomTactics">
      <tactic
            id="org.eventb.theory.rbp.rbp0">
      </tactic>
      <tactic
            id="org.eventb.theory.rbp.rbp1">
      </tactic>
   </extension>
   <extension
         point="org.eventb.core.postTactics">
      <tactic
            id="org.eventb.theory.rbp.rbp0">
      </tactic>
      <tactic
            id="org.eventb.theory.rbp.rbp1">
      </tactic>
   </extension>
   <extension
         point="org.eventb.ui.proofTactics">
      <tactic
            icon="icons/pending.gif"
            id="RbP0"
            interrupt="true"
            name="%rbpRewTactics"
            priority="5"
            tacticProvider="org.eventb.theory.rbp.tactics.RewritesManualTactic"
            target="any"
            tooltip="%applyRew">
      </tactic>
      <tactic
            icon="icons/thyDep.gif"
            id="RbP1"
            interrupt="true"
            name="%rbpInfTactics"
            priority="5"
            tacticProvider="org.eventb.theory.rbp.tactics.InferenceManualTactic"
            target="any"
            tooltip="%applyInf">
      </tactic>
       <tactic
             icon="icons/thyReduce.gif"
             id="RbP2Classic"
             interrupt="true"
             name="%reduceToClassicTactic"
             priority="3"
             tacticProvider="org.eventb.theory.rbp.tactics.ReduceToClassicLanguageTactic"
             target="global"
             toolbar="org.eventb.ui.sequentToolbar"
             tooltip="%reduceToClassicLang">
       </tactic>
       <tactic
             icon="icons/thyDep.gif"
             id="RbPtheorems"
             interrupt="false"
             name="%insertTheoremTactic"
             priority="4"
             tacticProvider="org.eventb.theory.rbp.tactics.TheoremInstantiationTactic"
             target="global"
             toolbar="org.eventb.ui.sequentToolbar"
             tooltip="%insertTheorem">
       </tactic>
   </extension>
   <extension
         point="org.eventb.core.pm.extendedExpressionMatcher">
      <extendedExpressionMatcher
            class="org.eventb.theory.rbp.pm.TheoryExtendedExpressionMatcher">
      </extendedExpressionMatcher>
   </extension>
   <extension
         point="org.eventb.core.pm.extendedPredicateMatcher">
      <extendedPredicateMatcher
            class="org.eventb.theory.rbp.pm.TheoryExtendedPredicateMatcher">
      </extendedPredicateMatcher>
   </extension>
   

</plugin>
 
